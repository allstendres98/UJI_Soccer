<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListTeamActivity">

    <TextView
        android:id="@+id/data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#514A4A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEAM"
        app:layout_constraintEnd_toStartOf="@+id/pl"
        app:layout_constraintStart_toEndOf="@+id/pos"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pl"
        android:layout_width="19dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:gravity="center_horizontal"
        android:text="PL"
        app:layout_constraintEnd_toStartOf="@+id/w"
        app:layout_constraintTop_toTopOf="@+id/data" />

    <TextView
        android:id="@+id/w"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:gravity="center_horizontal"
        android:text="W"
        android:textColor="#0D6D01"
        app:layout_constraintEnd_toStartOf="@+id/d"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/d"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:gravity="center_horizontal"
        android:text="D"
        app:layout_constraintEnd_toStartOf="@+id/l"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/l"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:gravity="center_horizontal"
        android:text="L"
        android:textColor="#8F0303"
        app:layout_constraintEnd_toStartOf="@+id/pt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pt"
        android:layout_width="19dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:gravity="center_horizontal"
        android:text="PT"
        app:layout_constraintEnd_toStartOf="@+id/gf"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gf"
        android:layout_width="19dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:gravity="center_horizontal"
        android:text="GF"
        app:layout_constraintEnd_toStartOf="@+id/ga"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ga"
        android:layout_width="19dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="GA"
        app:layout_constraintEnd_toEndOf="@+id/data"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data">

    </ListView>
</androidx.constraintlayout.widget.ConstraintLayout>